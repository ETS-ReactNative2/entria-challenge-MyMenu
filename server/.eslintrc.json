{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "import/no-cycle": "off",
      "import/prefer-default-export": "off",
      "new-cap": "off",
      "no-unused-expressions":"off",
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "comma-dangle": ["error", { "functions": "ignore" }],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "settings": {
      "import/resolver": "babel-plugin-root-import"
    }
}
